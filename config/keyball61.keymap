        symbol_layer {
            label = "SYM";
            bindings = <
&kt GRAVE        &kp EXCLAMATION  &kp AT_SIGN      &kp HASH        &kp DOLLAR     &kp PERCENT                                               &kp CARET                        &kp AMPERSAND                     &kp ASTERISK                       &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &kp DELETE
&bt BT_CLR       &bt BT_SEL 0     &bt BT_SEL 1     &bt BT_SEL 2    &bt BT_SEL 3   &bt BT_SEL 4                                              &rgb_ug RGB_COLOR_HSB(0,100,50)  &rgb_ug RGB_COLOR_HSB(55,100,50)  &rgb_ug RGB_COLOR_HSB(108,100,50)  &kp LEFT_BRACKET      &kp RIGHT_BRACKET      &trans
